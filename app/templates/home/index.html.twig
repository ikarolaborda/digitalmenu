                            <div class="hr-img">
                                <img src="{{ asset('images/' ~ dish02.image) }}" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero section end -->
{% endblock %}
