{% extends 'base.html.twig' %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">Usuário não encontrado ou senha inválida!</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Conectado como:  {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}


    <div class="container mt-4">
        <div class="row clearfix"></div>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Efetue seu login</h5>
                <label for="inputUsername">Usuário</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                <label for="inputPassword">Senha</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button class="mt-3 btn btn-lg btn-primary" type="submit">
                    Login
                </button>

            </div>
        </div>

    </div>



    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}


</form>
{% endblock %}
